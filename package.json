{
  "name": "electron-installer-snap",
  "version": "4.1.0",
  "description": "Build snapcraft packages for Electron applications",
  "author": "Mark Lee",
  "license": "Apache-2.0",
  "main": "src/index.js",
  "bin": {
    "electron-installer-snap": "src/cli.js"
  },
  "files": [
    "NEWS.md",
    "resources",
    "src"
  ],
  "scripts": {
    "ava": "ava",
    "codecov": "nyc report --reporter=text-lcov | codecov --disable=gcov --pipe",
    "coverage": "nyc ava",
    "lint": "eslint .",
    "test": "npm run lint && ava",
    "test:fast": "cross-env FAST_TESTS_ONLY=1 npm test"
  },
  "repository": "electron-userland/electron-installer-snap",
  "keywords": [
    "electron",
    "installer",
    "snap",
    "snapcraft",
    "linux"
  ],
  "devDependencies": {
    "ava": "^2.0.0",
    "codecov": "^3.1.0",
    "cross-env": "^6.0.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^14.0.0",
    "eslint-plugin-ava": "^9.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "nyc": "^15.0.0",
    "sinon": "^8.0.4"
  },
  "dependencies": {
    "cross-spawn-promise": "^0.10.1",
    "debug": "^4.1.1",
    "electron-installer-common": "^0.9.0",
    "fs-extra": "^8.0.1",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.15",
    "semver": "^6.1.0",
    "tmp-promise": "^2.0.1",
    "which": "^2.0.1",
    "yargs": "^15.0.1"
  },
  "engines": {
    "node": ">= 8.0"
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "test/*.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:ava/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:node/recommended",
      "plugin:promise/recommended",
      "standard"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "plugins": [
      "ava"
    ],
    "rules": {
      "ava/no-ignored-test-files": 0,
      "indent": [
        "error",
        2,
        {
          "CallExpression": {
            "arguments": "first"
          },
          "SwitchCase": 1
        }
      ],
      "no-console": 0,
      "strict": "error"
    }
  }
}
