{
  "name": "electron-installer-snap",
  "version": "3.0.0",
  "description": "Build snapcraft packages for Electron applications",
  "author": "Mark Lee",
  "license": "Apache-2.0",
  "main": "src/index.js",
  "bin": {
    "electron-installer-snap": "src/cli.js"
  },
  "files": [
    "NEWS",
    "resources",
    "src"
  ],
  "scripts": {
    "ava": "ava test",
    "coverage": "nyc ava test",
    "lint": "eslint .",
    "test": "npm run lint && npm run ava"
  },
  "repository": "electron-userland/electron-installer-snap",
  "keywords": [
    "electron",
    "installer",
    "snap",
    "snapcraft",
    "linux"
  ],
  "devDependencies": {
    "ava": "^0.25.0",
    "codecov": "^3.0.0",
    "eslint": "^4.7.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-ava": "^4.4.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "nyc": "^11.4.1"
  },
  "dependencies": {
    "asar": "^0.14.0",
    "cross-spawn-promise": "^0.10.1",
    "debug": "^3.0.1",
    "electron-installer-common": "^0.3.0",
    "fs-extra": "^5.0.0",
    "js-yaml": "^3.10.0",
    "lodash.filter": "^4.6.0",
    "lodash.merge": "^4.6.0",
    "lodash.pull": "^4.1.0",
    "lodash.template": "^4.4.0",
    "nodeify": "^1.0.1",
    "pify": "^3.0.0",
    "tmp-promise": "^1.0.3",
    "which": "^1.3.0",
    "yargs": "^11.0.0"
  },
  "engines": {
    "node": ">= 6.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:ava/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:node/recommended",
      "plugin:promise/recommended",
      "standard"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "plugins": [
      "ava"
    ],
    "rules": {
      "ava/prefer-async-await": 0,
      "indent": [
        "error",
        2,
        {
          "CallExpression": {
            "arguments": "first"
          },
          "SwitchCase": 1
        }
      ],
      "no-console": 0,
      "strict": "error"
    }
  }
}
